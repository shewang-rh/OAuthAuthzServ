<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>MyEclipse AuthzServer Examples</display-name>
    <description>
      OAuth Authorization Server examples using Eclipse for: JSP, Java Beans, Servlets
    </description>

    <!-- Define servlets that are included in the example application -->

    <servlet>
        <servlet-name>AuthzServer</servlet-name>
        <servlet-class>AuthzServer</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AuthzServer</servlet-name>
        <url-pattern>/servlet/AuthzServer</url-pattern>
    </servlet-mapping>


</web-app>